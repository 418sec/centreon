<?xml version="1.0" encoding="UTF-8"?>
<forms>
	<form name="hostgroup_form">
		<route>/configuration/hostgroup/update</route>
		<redirect>1</redirect>
		<redirect_route>/configuration/hostgroup</redirect_route>
		<section name="General">
			<block name="General information">
				<field name="hg_name" label="Name" default_value="" advanced="0" type="text" parent_field="" module_id="1" mandatory="1"></field>
				<field name="hg_alias" label="Alias" default_value="" advanced="0" type="text" parent_field="" module_id="1" mandatory="1"></field>
			</block>
			<block name="Relations">
				<field name="hg_hosts" label="Hosts" default_value="" advanced="0" type="select" parent_field="" module_id="1" mandatory="0">
					<attribute>{"object_type":"object","defaultValuesRoute":"/configuration/host/formlist","listValuesRoute":"/configuration/hostgroup/[i:id]/host","multiple":true,"ordered":false}</attribute>
				</field>
			</block>
			<block name="Additional information">
				<field name="hg_comment" label="Comments" default_value="" advanced="0" type="textarea" parent_field="" module_id="1" mandatory="0"></field>
				<field name="hg_activate" label="Status" default_value="" advanced="0" type="radio" parent_field="" module_id="1" mandatory="1">
					<attributes>{\"Enabled\":1, \"Disabled\":0}</attributes>
				</field>
			</block>
		</section>
	</form>
</forms>
