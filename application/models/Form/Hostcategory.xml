<?xml version="1.0" encoding="UTF-8"?>
<forms>
	<form name="host_category_form">
		<route>/configuration/hostcategory/update</route>
		<redirect>1</redirect>
		<redirect_route>/configuration/hostcategory</redirect_route>
		<section name="General">
			<block name="General information">
				<field name="hc_name" label="Name" default_value="" advanced="0" type="text" parent_field="" module_id="1" mandatory="1"></field>
				<field name="hc_alias" label="Alias" default_value="" advanced="0" type="text" parent_field="" module_id="1" mandatory="1"></field>
				<field name="icon_id" label="Icon" default_value="" advanced="0" type="selectimage" parent_field="" module_id="1" mandatory="0"></field>
			</block>
			<block name="Relations">
				<field name="hc_hosts" label="Hosts" default_value="" advanced="0" type="select" parent_field="" module_id="1" mandatory="0">
					<attributes>{"object_type":"object","defaultValuesRoute":"/configuration/host/formlist","listValuesRoute":"/configuration/hostcategory/[i:id]/host","multiple":true,"ordered":false}</attributes>
				</field>
				<field name="hc_hosttemplates" label="Host templates" default_value="" advanced="0" type="select" parent_field="" module_id="1" mandatory="0">
					<attributes>{"object_type":"object","defaultValuesRoute":"/configuration/hosttemplate/formlist","listValuesRoute":"/configuration/hostcategory/[i:id]/hosttemplate","multiple":true,"ordered":false}</attributes>
				</field>
			</block>
			<block name="Additional information">
				<field name="hc_comment" label="Comments" default_value="" advanced="0" type="textarea" parent_field="" module_id="1" mandatory="0"></field>
				<field name="hc_activate" label="Status" default_value="" advanced="0" type="radio" parent_field="" module_id="1" mandatory="1">
					<attributes>{\"Enabled\":1, \"Disabled\":0}</attributes>
				</field>
			</block>
		</section>
	</form>
</forms>
