<?xml version="1.0" encoding="UTF-8"?>
<forms>
	<form name="hosttemplate_form">
		<route>/configuration/hosttemplate/update</route>
		<redirect>1</redirect>
		<redirect_route>/configuration/hosttemplate</redirect_route>
		<section name="Host configuration">
			<block name="General information">
				<field name="host_name" label="Name" default_value="" advanced="0" type="text" parent_field="" module_id="1" mandatory="1"></field>
				<field name="host_alias" label="Alias" default_value="" advanced="0" type="text" parent_field="" module_id="1" mandatory="1"></field>
			</block>
			<block name="Host check properties">
				<field name="timeperiod_tp_id" label="Check period" default_value="" advanced="0" type="select" parent_field="" module_id="1" mandatory="0">
					<attributes>{"object_type":"object","defaultValuesRoute":"/configuration/timeperiod/formlist","listValuesRoute":"/configuration/hosttemplate/[i:id]/checkperiod","multiple":false}</attributes>
				</field>
				<field name="host_check_command" label="Check command" default_value="" advanced="0" type="select" parent_field="" module_id="1" mandatory="0">
					<attributes>{"object_type":"object","defaultValuesRoute":"/configuration/command/formlist","listValuesRoute":"/configuration/hosttemplate/[i:id]/checkcommand","multiple":false}</attributes>
				</field>
				<field name="host_max_check_attempts" label="Max check attempts" default_value="" advanced="1" type="integer" parent_field="" module_id="1" mandatory="1"></field>
				<field name="host_check_interval" label="Normal check interval" default_value="" advanced="1" type="integer" parent_field="" module_id="1" mandatory="0"></field>
				<field name="host_retry_check_interval" label="Retry check interval" default_value="" advanced="1" type="integer" parent_field="" module_id="1" mandatory="0"></field>
				<field name="host_active_checks_enabled" label="Active checks enabled" default_value="2" advanced="1" type="radio" parent_field="" module_id="1" mandatory="0">
					<attributes>{"Yes":1, "No":0, "Default":2}</attributes>
				</field>
				<field name="host_passive_checks_enabled" label="Passive checks enabled" default_value="2" advanced="1" type="radio" parent_field="" module_id="1" mandatory="0">
					<attributes>{"Yes":1, "No":0, "Default":2}</attributes>
				</field>
			</block>
			<block name="Notification">
				<field name="host_notifications_enabled" label="Notification enabled" default_value="2" advanced="1" type="radio" parent_field="" module_id="0" mandatory="0">
					<attributes>{"Yes":1, "No":0, "Default":2}</attributes>
				</field>
				<field name="host_contacts" label="Linked contacts" default_value="" advanced="0" type="select" parent_field="" module_id="1" mandatory="0">
					<attributes>{"object_type":"object","defaultValuesRoute":"/configuration/user/formlist","listValuesRoute":"/configuration/hosttemplate/[i:id]/contact","multiple":true}</attributes>
				</field>
				<field name="host_contactgroups" label="Linked contacts" default_value="" advanced="0" type="select" parent_field="" module_id="1" mandatory="0">
					<attributes>{"object_type":"object","defaultValuesRoute":"/configuration/usergroup/formlist","listValuesRoute":"/configuration/hosttemplate/[i:id]/contactgroup","multiple":true}</attributes>
				</field>
				<field name="host_notification_interval" label="Notification interval" default_value="" advanced="1" type="integer" parent_field="" module_id="1" mandatory="1"></field>
				<field name="timeperiod_tp_id2" label="Notification period" default_value="" advanced="0" type="select" parent_field="" module_id="1" mandatory="0">
					<attributes>{"object_type":"object","defaultValuesRoute":"/configuration/timeperiod/formlist","listValuesRoute":"/configuration/hosttemplate/[i:id]/notificationperiod","multiple":false}</attributes>
				</field>
				<field name="host_notification_options" label="Notification options" default_value="" advanced="1" type="checkbox" parent_field="" module_id="1" mandatory="0">
					<attributes>{"Down":1, "Unreachable":1, "Recovery":1, "Flapping":1, "Downtime Scheduled":1}</attributes>
				</field>
				<field name="host_first_notification_delay" label="First notification delay" default_value="" advanced="1" type="integer" parent_field="" module_id="1" mandatory="0"></field>
			</block>
			<block name="Additional information">
				<field name="hg_comment" label="Comments" default_value="" advanced="0" type="textarea" parent_field="" module_id="1" mandatory="0"></field>
				<field name="hg_activate" label="Status" default_value="" advanced="0" type="radio" parent_field="" module_id="1" mandatory="1">
					<attributes>{\"Enabled\":1, \"Disabled\":0}</attributes>
				</field>
			</block>
		</section>
	</form>
</forms>
