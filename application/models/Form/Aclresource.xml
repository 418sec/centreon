<?xml version="1.0" encoding="UTF-8"?>
<forms>
	<form name="aclresource_form">
		<route>/administration/aclresource/update</route>
		<redirect>1</redirect>
		<redirect_route>/administration/aclresource</redirect_route>
		<section name="General">
			<block name="General information">
				<field name="acl_res_name" label="Name" default_value="" advanced="0" type="text" parent_field="" module_id="1" mandatory="1"></field>
				<field name="acl_res_alias" label="Description" default_value="" advanced="0" type="text" parent_field="" module_id="1" mandatory="1"></field>
			</block>
			<block name="Relations">
				<field name="acl_resource_groups" label="ACL groups" default_value="" advanced="0" type="select" parent_field="" module_id="1" mandatory="0">
					<attributes>
						<object_type>object</object_type>
						<defaultValuesRoute>/administration/aclgroup/formlist</defaultValuesRoute>
						<listValuesRoute>/administration/aclresource/[i:id]/aclgroup</listValuesRoute>
						<multiple>true</multiple>
						<ordered>false</ordered>
					</attributes>
				</field>
			</block>
			<block name="Additional information">
				<field name="acl_res_status" label="Status" default_value="1" advanced="0" type="radio" parent_field="" module_id="1" mandatory="1">
					<attributes>{"Enabled":1, "Disabled":0}</attributes>
				</field>
				<field name="acl_res_comment" label="Comments" default_value="" advanced="0" type="textarea" parent_field="" module_id="1" mandatory="0"></field>
			</block>
		</section>
		<section name="Hosts"> 
			<block name="Shared resources">
				<field name="acl_resource_hosts" label="Hosts" default_value="" advanced="0" type="select" parent_field="" module_id="1" mandatory="0">
					<attributes>{"object_type":"object","defaultValuesRoute":"/configuration/host/formlist","listValuesRoute":"/administration/aclresource/[i:id]/host","multiple":true,"ordered":false}</attributes>
				</field>
				<field name="acl_resource_hostgroups" label="Host groups" default_value="" advanced="0" type="select" parent_field="" module_id="1" mandatory="0">
					<attributes>{"object_type":"object","defaultValuesRoute":"/configuration/hostgroup/formlist","listValuesRoute":"/administration/aclresource/[i:id]/hostgroup","multiple":true,"ordered":false}</attributes>
				</field>
				<field name="acl_resource_excluded_hosts" label="Exclude hosts from host groups" default_value="" advanced="0" type="select" parent_field="" module_id="1" mandatory="0">
					<attributes>{"object_type":"object","defaultValuesRoute":"/configuration/host/formlist","listValuesRoute":"/administration/aclresource/[i:id]/excludedhost","multiple":true,"ordered":false}</attributes>
				</field>
			</block>
		</section>
		<section name="Services"> 
			<block name="Shared resources">
				<field name="acl_resource_servicegroups" label="Service groups" default_value="" advanced="0" type="select" parent_field="" module_id="1" mandatory="0">
					<attributes>{"object_type":"object","defaultValuesRoute":"/configuration/servicegroup/formlist","listValuesRoute":"/administration/aclresource/[i:id]/servicegroup","multiple":true,"ordered":false}</attributes>
				</field>
			</block>
		</section>
		<section name="Meta services"> 
			<block name="Shared resources">
				<field name="acl_resource_metaservices" label="Meta services" default_value="" advanced="0" type="select" parent_field="" module_id="1" mandatory="0">
					<attributes>{"object_type":"object","defaultValuesRoute":"/configuration/metaservice/formlist","listValuesRoute":"/administration/aclresource/[i:id]/metaservice","multiple":true,"ordered":false}</attributes>
				</field>
			</block>
		</section>
		<section name="Filters"> 
			<block name="Resource filters">
				<field name="acl_resource_pollers" label="Pollers" default_value="" advanced="0" type="select" parent_field="" module_id="1" mandatory="0">
					<attributes>{"object_type":"object","defaultValuesRoute":"/configuration/poller/formlist","listValuesRoute":"/administration/aclresource/[i:id]/poller","multiple":true,"ordered":false}</attributes>
				</field>
				<field name="acl_resource_host_categories" label="Host categories" default_value="" advanced="0" type="select" parent_field="" module_id="1" mandatory="0">
					<attributes>{"object_type":"object","defaultValuesRoute":"/configuration/hostcategory/formlist","listValuesRoute":"/administration/aclresource/[i:id]/hostcategory","multiple":true,"ordered":false}</attributes>
				</field>
				<field name="acl_resource_service_categories" label="Service categories" default_value="" advanced="0" type="select" parent_field="" module_id="1" mandatory="0">
					<attributes>{"object_type":"object","defaultValuesRoute":"/configuration/servicecategory/formlist","listValuesRoute":"/administration/aclresource/[i:id]/servicecategory","multiple":true,"ordered":false}</attributes>
				</field>
			</block>
		</section>
	</form>
</forms>
