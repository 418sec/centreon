<?xml version="1.0" encoding="UTF-8"?>
<forms>
	<form name="servicegroup_form">
		<route>/configuration/servicegroup/update</route>
		<redirect>1</redirect>
		<redirect_route>/configuration/servicegroup</redirect_route>
		<section name="General">
			<block name="General information">
				<field name="sg_name" label="Name" default_value="" advanced="0" type="text" parent_field="" module_id="1" mandatory="1"></field>
				<field name="sg_alias" label="Alias" default_value="" advanced="0" type="text" parent_field="" module_id="1" mandatory="1"></field>
			</block>
			<block name="Relations">
				<field name="sg_services" label="Services" default_value="" advanced="0" type="select" parent_field="" module_id="1" mandatory="0">
					<attributes>
						<object_type>object</object_type>
						<defaultValuesRoute>/configuration/service/formlist</defaultValuesRoute>
						<listValuesRoute>/configuration/servicegroup/[i:id]/service</listValuesRoute>
						<multiple>true</multiple>
						<ordered>false</ordered>
					</attributes>
				</field>
			</block>
			<block name="Additional information">
				<field name="sg_comment" label="Comments" default_value="" advanced="0" type="textarea" parent_field="" module_id="1" mandatory="0"></field>
				<field name="sg_activate" label="Status" default_value="" advanced="0" type="radio" parent_field="" module_id="1" mandatory="1">
					<attributes>
                        <choices>
                            <Enabled>1</Enabled>
                            <Disabled>0</Disabled>
                        </choices>
					</attributes>
				</field>
			</block>
		</section>
	</form>
</forms>
