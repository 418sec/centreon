<?xml version="1.0" encoding="UTF-8"?>
<forms>
	<form name="contact_form">
		<route>/configuration/user/update</route>
		<redirect>1</redirect>
		<redirect_route>/configuration/user</redirect_route>
		<section name="General">
			<block name="General information">
				<field name="contact_alias" label="Alias / Login" default_value="" advanced="0" type="text" parent_field="" module_id="1" mandatory="1"></field>
				<field name="contact_name" label="Full name" default_value="" advanced="0" type="text" parent_field="" module_id="1" mandatory="1"></field>
				<field name="contact_email" label="E-mail address" default_value="" advanced="0" type="text" parent_field="" module_id="1" mandatory="1"></field>
				<field name="contact_template_id" label="Template" default_value="" advanced="0" type="select" parent_field="" module_id="1" mandatory="0">
					<attributes>
						<object_type>object</object_type>
						<defaultValuesRoute>/configuration/contacttemplate/formlist</defaultValuesRoute>
						<listValuesRoute>/configuration/user/[i:id]/contacttemplate</listValuesRoute>
						<multiple>false</multiple>
					</attributes>
				</field>
			</block>
			<block name="Relations">
				<field name="contact_contactgroups" label="Contact groups" default_value="" advanced="0" type="select" parent_field="" module_id="1" mandatory="0">
					<attributes>
						<object_type>object</object_type>
						<defaultValuesRoute>/configuration/usergroup/formlist</defaultValuesRoute>
						<listValuesRoute>/configuration/user/[i:id]/contactgroup</listValuesRoute>
						<multiple>true</multiple>
						<ordered>false</ordered>
					</attributes>
				</field>
			</block>
			<block name="Notification">
				<field name="contact_enable_notifications" label="Enable notifications" default_value="2" advanced="0" type="radio" parent_field="" module_id="1" mandatory="1">
					<attributes>
                        <choices>
                            <Yes>1</Yes>
                            <No>0</No>
                            <Default>2</Default>
                        </choices>
					</attributes>
				</field>
				<field name="contact_host_notification_options" label="Host notification options" default_value="" advanced="1" type="checkbox" parent_field="" module_id="1" mandatory="0">
					<attributes>
                        <choices>
                            <Down>1</Down>
                            <Unreachable>1</Unreachable>
                            <Recovery>1</Recovery>
                            <Flapping>1</Flapping>
                            <Downtime_Scheduled>1</Downtime_Scheduled>
                            <None>1</None>
                        </choices>
					</attributes>
				</field>
				<field name="timeperiod_tp_id" label="Host notification period" default_value="" advanced="0" type="select" parent_field="" module_id="1" mandatory="0">
					<attributes>
						<object_type>object</object_type>
						<defaultValuesRoute>/configuration/timeperiod/formlist</defaultValuesRoute>
						<listValuesRoute>/configuration/user/[i:id]/hostnotifperiod</listValuesRoute>
						<multiple>false</multiple>
					</attributes>
				</field>
				<field name="contact_host_notif_command" label="Host notification command" default_value="" advanced="0" type="select" parent_field="" module_id="1" mandatory="0">
					<attributes>
						<object_type>object</object_type>
						<defaultValuesRoute>/configuration/command/formlist</defaultValuesRoute>
						<listValuesRoute>/configuration/user/[i:id]/hostnotifcommand</listValuesRoute>
						<multiple>true</multiple>
						<ordered>false</ordered>
					</attributes>
				</field>
				<field name="contact_service_notification_options" label="Service notification options" default_value="" advanced="1" type="checkbox" parent_field="" module_id="1" mandatory="0">
					<attributes>
                        <choices>
                            <Warning>1</Warning>
                            <Unknown>1</Unknown>
                            <Critical>1</Critical>
                            <Recovery>1</Recovery>
                            <Flapping>1</Flapping>
                            <Downtime_scheduled>1</Downtime_scheduled>
                            <None>1</None>
                        </choices>
					</attributes>
				</field>
				<field name="timeperiod_tp_id2" label="Service notification period" default_value="" advanced="0" type="select" parent_field="" module_id="1" mandatory="0">
					<attributes>
						<object_type>object</object_type>
						<defaultValuesRoute>/configuration/timeperiod/formlist</defaultValuesRoute>
						<listValuesRoute>/configuration/user/[i:id]/servicenotifperiod</listValuesRoute>
						<multiple>false</multiple>
					</attributes>
				</field>
				<field name="contact_service_notif_command" label="Service notification command" default_value="" advanced="0" type="select" parent_field="" module_id="1" mandatory="0">
					<attributes>
						<object_type>object</object_type>
						<defaultValuesRoute>/configuration/command/formlist</defaultValuesRoute>
						<listValuesRoute>/configuration/user/[i:id]/servicenotifcommand</listValuesRoute>
						<multiple>true</multiple>
						<ordered>false</ordered>
					</attributes>
				</field>
			</block>
		</section>
		<section name="Access">
			<block name="Authentication">
				<field name="contact_oreon" label="Enable UI access" default_value="0" advanced="0" type="radio" parent_field="" module_id="1" mandatory="1">
					<attributes>
                        <choices>
                            <Yes>1</Yes>
                            <No>0</No>
                        </choices>
					</attributes>
				</field>
				<field name="contact_passwd" label="Password" default_value="" advanced="0" type="password" parent_field="" module_id="1" mandatory="0"></field>
				<field name="contact_passwd_confirm" label="Confirm password" default_value="" advanced="0" type="password" parent_field="" module_id="1" mandatory="0"></field>
				<field name="contact_autologin_key" label="Autologin key" default_value="" advanced="0" type="text" parent_field="" module_id="1" mandatory="0"></field>
				<field name="contact_auth_type" label="Authentication type" default_value="local" advanced="0" type="radio" parent_field="" module_id="1" mandatory="0">
					<attributes>
                        <choices>
                            <Default>local</Default>
                            <LDAP>ldap</LDAP>
                        </choices>
					</attributes>
				</field>
			</block>
			<block name="ACL">
				<field name="contact_admin" label="Admin role" default_value="0" advanced="0" type="radio" parent_field="" module_id="1" mandatory="1">
					<attributes>
                        <choices>
                            <Yes>1</Yes>
                            <No>0</No>
                        </choices>
					</attributes>
				</field>
				<field name="contact_aclgroups" label="ACL groups" default_value="" advanced="0" type="select" parent_field="" module_id="1" mandatory="0">
					<attributes>
						<object_type>object</object_type>
						<defaultValuesRoute>/administration/aclgroup/formlist</defaultValuesRoute>
						<listValuesRoute>/configuration/user/[i:id]/aclgroup</listValuesRoute>
						<multiple>true</multiple>
						<ordered>false</ordered>
					</attributes>
				</field>
			</block>
		</section>
		<section name="Extended information">
			<block name="Locale settings">
				<field name="contact_lang" label="Language" default_value="en_US.UTF-8" advanced="0" type="select" parent_field="" module_id="1" mandatory="0">
					<attributes>
						<object_type>object</object_type>
						<defaultValuesRoute>/administration/aclgroup/formlist</defaultValuesRoute>
						<listValuesRoute>/configuration/user/[i:id]/aclgroup</listValuesRoute>
						<multiple>false</multiple>
					</attributes>
				</field>
			</block>
			<block name="Additional information">
				<field name="contact_activate" label="Status" default_value="1" advanced="0" type="radio" parent_field="" module_id="1" mandatory="1">
					<attributes>
                        <choices>
                            <Enabled>1</Enabled>
                            <Disabled>0</Disabled>
                        </choices>
					</attributes>
				</field>
				<field name="contact_comment" label="Comments" default_value="" advanced="0" type="textarea" parent_field="" module_id="1" mandatory="0"></field>
			</block>
		</section>
	</form>
</forms>
