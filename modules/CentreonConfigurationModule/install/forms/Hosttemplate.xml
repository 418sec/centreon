<?xml version="1.0" encoding="UTF-8"?>
<forms>
    <form name="hosttemplate_form">
        <route>/centreon-configuration/hosttemplate/update</route>
        <redirect>1</redirect>
        <redirect_route>/centreon-configuration/hosttemplate</redirect_route>
        <section name="Host Template configuration">
            <block name="General information">
                <field normalized_name="name" name="host_name" label="Name" default_value="" advanced="0" type="text" parent_field="" mandatory="1">
                    <validators>
                        <validator rules="remote" serverside="centreon-main.unique" />
                        <validator rules="illegalChars" serverside="core.IllegalChars" />
                        <validator rules="size" serverside="core.String">
                            <argument name="minlength">3</argument>
                            <argument name="maxlength">255</argument>
                        </validator>
                    </validators>
                </field>
                <field normalized_name="alias" name="host_alias" label="Alias" default_value="" advanced="0" type="text" parent_field="" mandatory="0"></field>
                <field normalized_name="host-templates" name="host_hosttemplates" label="Host templates" default_value="" advanced="0" type="select" parent_field="" mandatory="0">
                    <attributes>
                        <object_type>object</object_type>
                        <defaultValuesRoute>/centreon-configuration/hosttemplate/formlist/[i:id]</defaultValuesRoute>
                        <listValuesRoute>/centreon-configuration/hosttemplate/[i:id]/hosttemplate</listValuesRoute>
                        <multiple>true</multiple>
                        <ordered>true</ordered>
                    </attributes>
                    <validators>
                        <validator rules="remote" serverside="centreon-main.circular.dependency"></validator>
                    </validators>
                </field>
                <field normalized_name="icon" name="host_icon" label="Icon" default_value="" advanced="0" type="selectimage" parent_field="" mandatory="0">
                    <attributes>
                        <object_type>object</object_type>
                        <defaultValuesRoute>/image/icon/centreon</defaultValuesRoute>
                        <listValuesRoute>/centreon-configuration/hosttemplate/[i:id]/icon</listValuesRoute>
                        <multiple>false</multiple>
                        <wizardRoute>/media/image/add</wizardRoute>
                    </attributes>
                </field>
                <field name="host_tags" label="Tags" default_value="" advanced="0" type="tag" parent_field="" mandatory="0">
                    <attributes>
                        <object_type>object</object_type>
                        <defaultValuesRoute>/centreon-administration/tag/all</defaultValuesRoute>
                        <listValuesRoute>/centreon-administration/tag/[i:id]/host/formlist</listValuesRoute>
                        <multiple>true</multiple>
                    </attributes>
                </field>
            </block>
            <block name="Service templates relations">
                <field normalized_name="service-templates" name="hosttemplate_servicetemplates" label="Linked Service Templates" default_value="" advanced="0" type="select" parent_field="" mandatory="0">
                    <attributes>
                        <object_type>object</object_type>
                        <defaultValuesRoute>/centreon-configuration/servicetemplate/formlist</defaultValuesRoute>
                        <listValuesRoute>/centreon-configuration/hosttemplate/[i:id]/servicetemplate</listValuesRoute>
                        <multiple>true</multiple>
                    </attributes>
                    <help>Define the description of the service. It may contain spaces, dashes, and colons (semicolons, apostrophes, and quotation marks should be avoided). Services must have a unique description on a per host basis.</help>
                </field>
            </block>
            <block name="Macros">
                <field name="host_custommacros" label="Custom macros" default_value="" advanced="0" type="custommacro" parent_field="" mandatory="0">
                    <attributes>
                        <object>host</object>
                    </attributes>
                </field>
            </block>
            <block name="Host check properties">
                <field normalized_name="timeperiod" name="timeperiod_tp_id" label="Check period" default_value="" advanced="0" type="select" parent_field="" mandatory="0">
                    <attributes>
                        <object_type>object</object_type>
                        <defaultValuesRoute>/centreon-configuration/timeperiod/formlist</defaultValuesRoute>
                        <listValuesRoute>/centreon-configuration/hosttemplate/[i:id]/checkperiod</listValuesRoute>
                        <multiple>false</multiple>
                    </attributes>
                </field>
                <field normalized_name="command" name="command_command_id" label="Check command" default_value="" advanced="0" type="select" parent_field="" mandatory="0">
                    <attributes>
                        <object_type>object</object_type>
                        <defaultValuesRoute>/centreon-configuration/command/formlist?type=2</defaultValuesRoute>
                        <listValuesRoute>/centreon-configuration/hosttemplate/[i:id]/checkcommand</listValuesRoute>
                        <multiple>false</multiple>
                    </attributes>
                </field>
                <field normalized_name="max-check-attempts" name="host_max_check_attempts" label="Max check attempts" default_value="" advanced="1" type="integer" parent_field="" mandatory="0"></field>
                <field normalized_name="check-interval" name="host_check_interval" label="Normal check interval" default_value="" advanced="1" type="integer" parent_field="" mandatory="0"></field>
                <field normalized_name="retry-check-interval" name="host_retry_check_interval" label="Retry check interval" default_value="" advanced="1" type="integer" parent_field="" mandatory="0"></field>
                <field normalized_name="active-checks-enabled" name="host_active_checks_enabled" label="Active checks enabled" default_value="2" advanced="1" type="radio" parent_field="" mandatory="0">
                    <attributes>
                        <choices>
                            <Yes>1</Yes>
                            <No>0</No>
                            <Default>2</Default>
                        </choices>
                    </attributes>
                    <validators>
                        <validator rules="remote" serverside="core.AuthorizedValues">
                            <argument name="values">0,1,2</argument>
                        </validator>
                    </validators>
                </field>
                <field name="host_snmp_community" normalized_name="snmp-community" label="Snmp community" default_value="" advanced="0" type="text" parent_field="" mandatory="0">
                    <help>Host snmp community.</help>
                </field>
                <field  normalized_name="snmp-version" name="host_snmp_version" label="Snmp version" default_value="" advanced="0" type="select" parent_field="" mandatory="0">
                    <help>Host snmp version.</help>
                    <attributes>
                        <object_type>object</object_type>
                        <defaultValuesRoute>/centreon-configuration/host/snmp-version/formlist</defaultValuesRoute>
                        <listValuesRoute>/centreon-configuration/host/[i:id]/snmp-version</listValuesRoute>
                        <multiple>false</multiple>
                    </attributes>
                </field>
            </block>
            <block name="Additional information">
                <field normalized_name="comment" name="host_comment" label="Comments" default_value="" advanced="0" type="textarea" parent_field="" mandatory="0"></field>
                <field normalized_name="enable" name="host_activate" label="Status" default_value="" advanced="0" type="radio" parent_field="" mandatory="1">
                    <attributes>
                        <choices>
                            <Enabled>1</Enabled>
                            <Disabled>0</Disabled>
                        </choices>
                    </attributes>
                    <validators>
                        <validator rules="remote" serverside="core.AuthorizedValues">
                            <argument name="values">0,1</argument>
                        </validator>
                    </validators>
                </field>
            </block>
        </section>
        <section name="Data processing">
            <block name="Data processing">
                <field name="host_obsess_over_host" label="Obsess over host" default_value="2" advanced="1" type="radio" parent_field="" mandatory="0">
                    <attributes>
                        <choices>
                            <Yes>1</Yes>
                            <No>0</No>
                            <Default>2</Default>
                        </choices>
                    </attributes>
                    <validators>
                        <validator rules="remote" serverside="core.AuthorizedValues">
                            <argument name="values">0,1,2</argument>
                        </validator>
                    </validators>
                </field>
            </block>
            <block name="Freshness control options">
                <field normalized_name="check-freshness" name="host_check_freshness" label="Check freshness" default_value="2" advanced="1" type="radio" parent_field="" mandatory="0">
                    <attributes>
                        <choices>
                            <Yes>1</Yes>
                            <No>0</No>
                            <Default>2</Default>
                        </choices>
                    </attributes>
                    <validators>
                        <validator rules="remote" serverside="core.AuthorizedValues">
                            <argument name="values">0,1,2</argument>
                        </validator>
                    </validators>
                </field>
                <field normalized_name="freshness-threshold" name="host_freshness_threshold" label="Freshness threshold" default_value="" advanced="1" type="text" parent_field="" mandatory="0"></field>
            </block>
            <block name="Flapping options">
                <field normalized_name="flap-detection-enabled" name="host_flap_detection_enabled" label="Flap detection enabled" default_value="2" advanced="1" type="radio" parent_field="" mandatory="0">
                    <attributes>
                        <choices>
                            <Yes>1</Yes>
                            <No>0</No>
                            <Default>2</Default>
                        </choices>
                    </attributes>
                    <validators>
                        <validator rules="remote" serverside="core.AuthorizedValues">
                            <argument name="values">0,1,2</argument>
                        </validator>
                    </validators>
                </field>
                <field normalized_name="low-flap-threshold" name="host_low_flap_threshold" label="Low flap threshold" default_value="" advanced="1" type="text" parent_field="" mandatory="0"></field>
                <field normalized_name="high-flap-threshold" name="host_high_flap_threshold" label="High flap threshold" default_value="" advanced="1" type="text" parent_field="" mandatory="0"></field>
            </block>
            <block name="Event handler">
                <field normalized_name="eventhandler-enabled" name="host_event_handler_enabled" label="Event handler enabled" default_value="2" advanced="1" type="radio" parent_field="" mandatory="0">
                    <attributes>
                        <choices>
                            <Yes>1</Yes>
                            <No>0</No>
                            <Default>2</Default>
                        </choices>
                    </attributes>
                    <validators>
                        <validator rules="remote" serverside="core.AuthorizedValues">
                            <argument name="values">0,1,2</argument>
                        </validator>
                    </validators>
                </field>
                <field normalized_name="command2" name="command_command_id2" label="Event handler" default_value="" advanced="1" type="select" parent_field="" mandatory="0">
                    <attributes>
                        <object_type>object</object_type>
                        <defaultValuesRoute>/centreon-configuration/command/formlist</defaultValuesRoute>
                        <listValuesRoute>/centreon-configuration/hosttemplate/[i:id]/eventhandler</listValuesRoute>
                        <multiple>false</multiple>
                    </attributes>
                </field>
            </block>
        </section>
    </form>
    <wizard name="add_hosttemplates">
        <route>/centreon-configuration/hosttemplate/add</route>
        <step name="General">
            <field name="host_name" mandatory="1"></field>
            <field name="host_alias" mandatory="0"></field>
            <field name="host_hosttemplates" mandatory="0"></field>
            <field name="host_custommacros" mandatory="0"></field>
            <field name="host_tags" mandatory="0"></field>
        </step>
        <step name="Relations">
            <field name="hosttemplate_servicetemplates" mandatory="0"></field>
        </step>
    </wizard>
</forms>
