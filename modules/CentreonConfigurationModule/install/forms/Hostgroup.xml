<?xml version="1.0" encoding="UTF-8"?>
<forms>
	<form name="hostgroup_form">
		<route>/configuration/hostgroup/update</route>
		<redirect>1</redirect>
		<redirect_route>/configuration/hostgroup</redirect_route>
		<section name="General">
			<block name="General information">
				<field name="hg_name" label="Name" default_value="" advanced="0" type="text" parent_field="" mandatory="1"></field>
				<field name="hg_alias" label="Alias" default_value="" advanced="0" type="text" parent_field="" mandatory="1"></field>
			</block>
			<block name="Relations">
				<field name="hg_hosts" label="Hosts" default_value="" advanced="0" type="select" parent_field="" mandatory="0">
					<attributes>
						<object_type>object</object_type>
						<defaultValuesRoute>/configuration/host/formlist</defaultValuesRoute>
						<listValuesRoute>/configuration/hostgroup/[i:id]/host</listValuesRoute>
						<multiple>true</multiple>
						<ordered>false</ordered>
					</attributes>
				</field>
			</block>
			<block name="Additional information">
				<field name="hg_comment" label="Comments" default_value="" advanced="0" type="textarea" parent_field="" mandatory="0"></field>
				<field name="hg_activate" label="Status" default_value="" advanced="0" type="radio" parent_field="" mandatory="1">
					<attributes>
                        <choices>
                            <Enabled>1</Enabled>
                            <Disabled>0</Disabled>
                        </choices>
					</attributes>
				</field>
			</block>
		</section>
	</form>
</forms>
