<?xml version="1.0" encoding="UTF-8"?>
<forms>
    <form name="ldap_form">
        <route>/centreon-configuration/ldap/update</route>
        <redirect>1</redirect>
        <redirect_route>/centreon-configuration/ldap</redirect_route>
        <section name="Ldap configuration">
            <block name="General information">Configuration name
                <field name="host_name" label="Configuration name" default_value="" advanced="0" type="text" parent_field="" mandatory="1">
                    <validators>
                    	<validator rules="remote" serverside="centreon-main.unique" />
                        <validator rules="forbiddenChar" serverside="core.forbiddenChar">
                        	<argument name="characters"><![CDATA[~!$%^&|<>?,;()=\"']]></argument>
                        </validator>
                        <validator rules="size" serverside="core.String">
                        	<argument name="minlength">3</argument>
                        	<argument name="maxlength">255</argument>
                        </validator>
                    </validators>
                </field>
                
            </block>
            
        </section>
        
        
    </form>

</forms>
