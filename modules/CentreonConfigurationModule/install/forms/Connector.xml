<?xml version="1.0" encoding="UTF-8"?>
<forms>
	<form name="connector_form">
		<route>/configuration/connector/update</route>
		<redirect>1</redirect>
		<redirect_route>/configuration/connector</redirect_route>
		<section name="General">
			<block name="General information">
				<field name="name" label="Name" default_value="" advanced="0" type="text" parent_field="" mandatory="1"></field>
				<field name="description" label="Description" default_value="" advanced="0" type="text" parent_field="" mandatory="1"></field>
				<field name="command_line" label="Command line" default_value="" advanced="0" type="textarea" parent_field="" mandatory="1"></field>
				<field name="connector_command" label="Commands" default_value="" advanced="0" type="select" parent_field="" mandatory="0">
					<attributes>
						<object_type>object</object_type>
						<defaultValuesRoute>/configuration/command/formlist</defaultValuesRoute>
						<listValuesRoute>/configuration/connector/[i:id]/command</listValuesRoute>
						<multiple>true</multiple>
						<ordered>false</ordered>
					</attributes>
				</field>
				<field name="enabled" label="Status" default_value="0" advanced="0" type="radio" parent_field="" mandatory="1">
					<attributes>
                        <choices>
                            <Enabled>1</Enabled>
                            <Disabled>0</Disabled>
                        </choices>
					</attributes>
				</field>
			</block>
		</section>
	</form>
</forms>
