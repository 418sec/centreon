{
  "name": "Central",
  "content": {
    "broker": {
      "setup": [
        {
          "name": "Broker Module",
          "params": {
            "mode": [
              {
                "normal": [
                  {
                    "general": {
                      "name": "cb_module"
                    },
                    "output": [
                      {
                        "type" :"IPV4",
                        "name" : "central-output",
                        "port" : "5668"
                      },
                      {
                        "type" :"file",
                        "name" : "failover-central-output",
                        "path" : "%global_broker_data_directory%/central-output.failover"
                      }
                    ],
                    "logger": [
                      {
                        "type": "file",
                        "name": "%global_broker_logs_directory%/cb_module.log"
                      }
                    ]
                  },
                  {
                    "general": {
                      "name": "cbd_storage"
                    },
                    "input": [
                      {
                        "type": "IPV4",
                        "name": "central-input",
                        "port": "5668"
                      }
                    ],
                    "output": [
                      {
                        "type": "sql",
                        "name": "central-sql",
                        "db_type": "%global_db_type%",
                        "db_host": "%global_db_host%",
                        "db_port": "%global_db_port%",
                        "db_name": "%global_db_name%",
                        "db_user": "%global_db_user%",
                        "db_password": "%global_db_password%"
                      },
                      {
                        "type": "file",
                        "name": "failover-central-sql",
                        "path" : "%global_broker_data_directory%/central-sql.failover",
                        "failover": "central-sql"
                      },
                      {
                        "type": "storage",
                        "name": "central-storage",
                        "db_type": "%global_db_type%",
                        "db_host": "%global_db_host%",
                        "db_port": "%global_db_port%",
                        "db_name": "%global_db_name%",
                        "db_user": "%global_db_user%",
                        "db_password": "%global_db_password%"
                      },
                      {
                        "type": "file",
                        "name": "failover-central-storage",
                        "path" : "%global_broker_data_directory%/central-sql.failover",
                        "failover": "central-storage"
                      },
                      {
                        "type": "local_client",
                        "name": "central-rrd",
                        "path": "%global_broker_data_directory%/central-rdd.pipe"
                      },
                      {
                        "type": "file",
                        "name": "failover-central-rrd",
                        "path" : "%global_broker_data_directory%/central-rrd.failover",
                        "failover": "central-rrd"
                      }
                    ],
                    "logger": [
                      {
                        "type": "file",
                        "name": "%global_broker_logs_directory%/cb_module.log"
                      }
                    ]
                  },
                  {
                    "general": {
                      "name": "cbd_rrd"
                    },
                    "input": [
                      {
                        "type": "local_server",
                        "name": "central-rrd",
                        "path": "%global_broker_data_directory%/central-rdd.pipe"
                      }
                    ],
                    "output": [
                      {
                        "type": "rrd",
                        "name": "storage-rrd"
                      },
                      {
                        "type": "failover",
                        "name": "failover-storage-rrd",
                        "path": "%global_broker_data_directory%/storage-rrd.failover"
                      }
                    ],
                    "logger": [
                      {
                        "type": "file",
                        "name": "%global_broker_logs_directory%/cb_rrd.log"
                      }
                    ]
                  }
                ]
              }
            ]
          }
        }
      ]
    }
  }
}
