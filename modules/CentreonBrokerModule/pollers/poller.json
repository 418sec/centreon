{
    "name" : "Poller",
    "content" : {
        "broker" : {
            "setup" : [
                {
                    "name" : "Broker Module",
                    "forms" : {
                        "steps" : [
                            {
                                "name" : "Central connection",
                                "order": 1,
                                "fields": [
                                    {
                                        "label" : "Central IP Address",
                                        "name": "broker_central_ip",
                                        "type" : "input"
                                    }
                                ]
                            }
                        ]
                    },
                    "params" : {
                        "mode" : [
                            {
                                "normal" : [
                                    {
                                        "general" : {
                                            "name" : "cb_module",
                                        },
                                        "output" : [
                                            {
                                                "type" :"IPV4",
                                                "name" : "central-output",
                                                "host": "%central_ip%",
                                                "port" : "5668"
                                            },
                                            {
                                                "type" :"file",
                                                "name" : "failover-central-output",
                                                "path" : "%broker_data_directory%/central-output.failover"
                                            }
                                        ],
                                        "logger": [
                                          {
                                            "type": "file",
                                            "name": "%broker_logs_directory%/cb_module.log"
                                          }
                                        ]
                                    }
                                ],
                                "one-peer-retention" : [
                                    {
                                        "general" : {
                                            "name" : "cb_module"
                                        },
                                        "output" : [
                                            {
                                                "type":"IPV4",
                                                "name": "central-output",
                                                "port" : "5668",
                                                "one_peer_retention_mode": "yes"
                                            },
                                            {
                                                "type" :"file",
                                                "name" : "failover-central-output",
                                                "path" : "%broker_data_directory%/central-output.failover"
                                            }
                                        ],
                                        "logger": [
                                          {
                                            "type": "file",
                                            "name": "%broker_logs_directory%/cb_module.log"
                                          }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                }
            ]
        }
    }
}
