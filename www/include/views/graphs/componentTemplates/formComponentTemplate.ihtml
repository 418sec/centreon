{$form.javascript}
<form {$form.attributes}>
 <table class="ListTable">
 	<tr class="ListHeader"><td class="FormHeader" colspan="2"><img src='./img/icones/16x16/layout_horizontal.gif'>&nbsp;&nbsp;{$form.header.ftitle}</td></tr>
 	<tr class="list_lvl_1"><td class="ListColLvl1_name" colspan="2"><img src='./img/icones/16x16/note.gif'>&nbsp;&nbsp;{$form.header.information}</td></tr>
	<tr class="list_one"><td class="FormRowField">{$form.name.label}</td><td class="FormRowValue">{$form.name.html}</td></tr>
	<tr class="list_two">
		<td class="FormRowField">{$form.ds_name.label}</td>
		<td id="td_ds"><table id="table_ds" border="0"><tr>
			<td id="td_ds_html" class="FormRowValue" style="padding: 0px; border-width: 0px;">{$form.ds_name.html}</td>
			{if $o == "a" || $o == "c"}
				<td id="td_list_metrics" style="padding: 0px; border-width: 0px;">
					&nbsp;<img src="./img/icones/16x16/arrow_left_blue.gif" onclick="insertValueQuery()" />&nbsp;
				</td>
			{/if}
		</tr></table></td>
	</tr>
	<tr class="list_one">
		<td class="FormRowField">
			{if $o == "a" || $o == "c"}
				<div style="text-decoration: underline;">{$form.host_id.label}</div>
				{$form.hsr_text.label}
			{/if}
			{if $o == "w"}
				<div>{$form.host_id.label}</div>
			{/if}
			
		</td>
		<td id="td_list_hsr" class="FormRowValue">
			{$form.host_id.html}
			&nbsp;&nbsp;&nbsp;/&nbsp;&nbsp;&nbsp;
		</td>
	</tr>
	<tr class="list_lvl_1"><td class="ListColLvl1_name" colspan="2"><img src='./img/icones/16x16/note.gif'>&nbsp;&nbsp;{$form.header.options}</td></tr>
	<tr class="list_one"><td class="FormRowField">{$form.ds_stack.label}</td><td class="FormRowValue">{$form.ds_stack.html}</td></tr>
	<tr class="list_two"><td class="FormRowField">{$form.ds_order.label}</td><td class="FormRowValue">{$form.ds_order.html}</td></tr>
	<tr class="list_one"><td class="FormRowField">{$form.ds_invert.label}</td><td class="FormRowValue">{$form.ds_invert.html}</td></tr>
	<tr class="list_lvl_1"><td class="ListColLvl1_name" colspan="2"><img src='./img/icones/16x16/note.gif'>&nbsp;&nbsp;{$form.header.color}</td></tr>
	<tr class="list_one"><td class="FormRowField">{$form.ds_tickness.label}</td><td class="FormRowValue">{$form.ds_tickness.html}px</td></tr>
	<tr class="list_two">
		<td class="FormRowField">{$form.ds_color_line.label}</td>
		{if $o == "a" || $o == "c"}
			<td id="td_ds_color_line" class="FormRowValue"">{$form.ds_color_line.html}&nbsp;&nbsp;{$form.ds_color_line_color.html}</td>
		{/if}
		{if $o == "w"}
			<td id="td_ds_color_line" class="FormRowValue" style="font-size: 11px; font-family: Courier New;">{$form.ds_color_line_read.html}</td>
		
		{/if}
	</tr>
	<tr class="list_one">
		<td class="FormRowField">{$form.ds_color_area.label}</td>
		<td class="FormRowField">
			<table>
				<tr>
					{if $o == "a" || $o == "c"}
						<td id="td_ds_color_area" class="FormRowValue" style="padding: 0px 5px 0px 0px; border-width: 0px 1px 0px 0px;">{$form.ds_color_area.html}&nbsp;&nbsp;{$form.ds_color_area_color.html}</td>
						<td id="td_ds_color_area_warn" class="FormRowValue" style="padding: 0px 5px 0px 5px; border-width: 0px 1px;">{$form.ds_color_area_warn.html}&nbsp;&nbsp;{$form.ds_color_area_warn_color.html}</td>
						<td id="td_ds_color_area_crit" class="FormRowValue" style="padding: 0px 0px 0px 5px; border-width: 0px 0px 0px 1px;">{$form.ds_color_area_crit.html}&nbsp;&nbsp;{$form.ds_color_area_crit_color.html}</td>
					{/if}
					{if $o == "w"}
						<td id="td_ds_color_area" class="FormRowValue" style="padding: 0px 5px 0px 0px; border-width: 0px 1px 0px 0px; font-size: 11px; font-family: Courier New;">{$form.ds_color_area_read.html}</td>
						<td id="td_ds_color_area_warn" class="FormRowValue" style="padding: 0px 5px 0px 5px; border-width: 0px 1px; font-size: 11px; font-family: Courier New;">{$form.ds_color_area_warn_read.html}</td>
						<td id="td_ds_color_area_crit" class="FormRowValue" style="padding: 0px 0px 0px 5px; border-width: 0px 0px 0px 1px; font-size: 11px; font-family: Courier New;">{$form.ds_color_area_crit_read.html}</td>
					{/if}
				</tr>
			</table>
	</tr>
	<tr class="list_two"><td class="FormRowField">{$form.ds_transparency.label}</td><td class="FormRowValue">{$form.ds_transparency.html}%</td></tr>
	<tr class="list_one"><td class="FormRowField">{$form.ds_filled.label}</td><td class="FormRowValue">{$form.ds_filled.html}</td></tr>
	
	<tr class="list_lvl_1"><td class="ListColLvl1_name" colspan="2"><img src='./img/icones/16x16/note.gif'>&nbsp;&nbsp;{$form.header.legend}</td></tr>
	<tr class="list_one"><td class="FormRowField">{$form.ds_legend.label}</td><td class="FormRowValue">{$form.ds_legend.html}</td></tr>
	<tr class="list_two"><td class="FormRowField">{$form.ds_hidecurve.label}</td><td class="FormRowValue">{$form.ds_hidecurve.html}</td></tr>
	<tr class="list_one"><td class="FormRowField">{$form.ds_jumpline.label}</td><td class="FormRowValue">{$form.ds_jumpline.html}</td></tr>
	<tr class="list_two"><td class="FormRowField">{$form.ds_max.label}</td><td class="FormRowValue">{$form.ds_max.html}</td></tr>
	<tr class="list_one"><td class="FormRowField">{$form.ds_min.label}</td><td class="FormRowValue">{$form.ds_min.html}</td></tr>
	<tr class="list_two"><td class="FormRowField">{$form.ds_average.label}</td><td class="FormRowValue">{$form.ds_average.html}</td></tr>
	<tr class="list_one"><td class="FormRowField">{$form.ds_last.label}</td><td class="FormRowValue">{$form.ds_last.html}</td></tr>
	<!--<tr class="list_two"><td class="FormRowField">{$form.default_tpl1.label}</td><td class="FormRowValue">{$form.default_tpl1.html}</td></tr>-->
	<tr class="list_one"><td class="FormRowField">{$form.comment.label}</td><td class="FormRowValue">{$form.comment.html}</td></tr>
	{if $o == "a" || $o == "c"}
		<tr class="list_lvl_2"><td class="ListColLvl2_name" colspan="2">{$form.required.note}</td></tr>
	{/if}
</table>
<div id="validForm">
{if $o == "a" || $o == "c"}
	<p>{$form.action.html}</p>
	<p>{$form.submitC.html}{$form.submitA.html}&nbsp;&nbsp;&nbsp;{$form.reset.html}</p>
{else if $o == "w"}
	<p>{$form.change.html}</p>
{/if}
</div>
{$form.hidden}
</form>

