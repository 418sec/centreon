<form {$form.attributes}>
<table class="ajaxOption table">
  <tr>
    <td><h4>{$form.pollers.label}</h4></td>
    <td><h4>{$form.start.label}</h4></td>
  </tr>
  <tr>
    <td>{$form.pollers.html}</td>
    <td>{$form.start.html}</td>
  </tr>
</table>
<br>
<a name="generate">
{assign var='cpt' value=0}
{foreach from=$host_list key=key item=item}
{assign var='cpt2' value=$cpt}
{assign var='cpt' value=$cpt+1}
	<table class="ListTable">
	 	<tr class="ListHeader">
	 		<td class="FormHeader"><img src='./img/icones/16x16/gauge.gif'>&nbsp;{$pollerName}&nbsp;</td>
	 	</tr>
		{assign var='counter' value=0}
		<tr>
			<td align="center">
	 		{foreach from=$options key=keyOptions item=itemOptions} 		
		 		{if $startPeriod}
		 		<img src="./include/Administration/corePerformance/getStats.php?ns_id={$key}&key={$keyOptions}&start={$startPeriod}">
		 		{else}
		 		<img src="./include/Administration/corePerformance/getStats.php?ns_id={$key}&key={$keyOptions}">
		 		{/if}	 	
	 		{assign var='counter' value=$counter+1}
		 	{/foreach}
	 		</td>
	 	</tr>	 	
	 </table>
{/foreach}
</form>
